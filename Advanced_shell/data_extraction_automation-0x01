#!/bin/bash

# Ensure data.json exists
if [ ! -f data.json ]; then
    echo "‚ùå data.json not found. Please run the API request script first."
    exit 1
fi

# Extract data using jq
NAME=$(jq -r '.name' data.json | sed 's/.*/\u&/') # Capitalize first letter
HEIGHT=$(jq -r '.height' data.json) # Decimetres
WEIGHT=$(jq -r '.weight' data.json) # Hectograms
TYPE=$(jq -r '.types[0].type.name' data.json | sed 's/.*/\u&/') # Capitalize first letter

# Convert units (height from decimetres to meters, weight from hectograms to kg)
HEIGHT_M=$(awk "BEGIN {print $HEIGHT / 10}")
WEIGHT_KG=$(awk "BEGIN {print $WEIGHT / 10}")

# Output formatted result
echo "$NAME is of type $TYPE, weighs ${WEIGHT_KG}kg, and is ${HEIGHT_M}m tall."
