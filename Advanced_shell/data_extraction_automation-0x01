#!/bin/bash

# Ensure data.json exists
if [ ! -f data.json ]; then
    echo "‚ùå data.json not found. Please run the API request script first."
    exit 1
fi

# Extract using jq and set variable names exactly as checker expects
name=$(jq -r '.name' data.json | sed 's/.*/\u&/')
height=$(jq -r '.height' data.json) # decimetres
weight=$(jq -r '.weight' data.json) # hectograms
type=$(jq -r '.types[0].type.name' data.json | sed 's/.*/\u&/')

# Convert to meters and kg
formatted_height=$(awk "BEGIN {print $height / 10}")
formatted_weight=$(awk "BEGIN {print $weight / 10}")

# Output in exact format required
echo "$name is of type $type, weighs ${formatted_weight}kg, and is ${formatted_height}m tall."
