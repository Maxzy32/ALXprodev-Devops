#!/bin/bash

# URL for Pikachu data
API_URL="https://pokeapi.co/api/v2/pokemon/pikachu"

# Output files
DATA_FILE="data.json"
ERROR_FILE="errors.txt"

# Make API request
curl -s -o "$DATA_FILE" -w "%{http_code}" "$API_URL" > status_code.txt

# Read status code
STATUS_CODE=$(cat status_code.txt)
rm status_code.txt

# Check if request was successful (status code 200)
if [ "$STATUS_CODE" -eq 200 ]; then
    echo "✅ Successfully retrieved Pikachu data and saved to $DATA_FILE"
else
    echo "❌ Request failed with status code: $STATUS_CODE" | tee -a "$ERROR_FILE"
    # Remove invalid/empty data.json if failed
    rm -f "$DATA_FILE"
fi
